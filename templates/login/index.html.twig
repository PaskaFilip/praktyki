{% extends 'base.html.twig' %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% endblock %}
{% block body %}
<body class="bg-dark text-info">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<form action="{{ path('app_login') }}" method="post">
<div class="position-absolute top-50 start-50 translate-middle">
<div class="row g-3 ">
  <div class="col-sm-5">
    <label for="username" class="form-label">Username:</label>
    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
  </div>
  

  <div class="col-sm-5">
    <label for="password" class="form-label">Password</label>
    <input type="password" class="form-control" id="password" name="_password"><br>
    <input type="hidden" name="_target_path" value="^/lista">
  </div>
</div>
<button type="submit" class="btn btn-primary">Submit</button>
</div>
</form>
</body>
{% endblock %}